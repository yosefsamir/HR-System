@model HR_system.ViewModels.ShiftsIndexViewModel
@using HR_system.Models.Enums

@{
    ViewData["Title"] = "الورديات";
    ViewData["PageTitle"] = "قائمة الورديات";
    ViewData["PageIcon"] = "bi-clock";
}

<div class="container-fluid">
    <!-- Shifts List Card -->
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0">
                <i class="bi bi-list-ul me-2"></i>
                قائمة الورديات
            </h5>
            <div class="d-flex align-items-center gap-3">
                <span class="badge bg-secondary">@Model.Shifts.Count() وردية</span>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-lg me-2"></i>
                    إضافة وردية
                </a>
            </div>
        </div>
        <div class="card-body p-0">
            @if (!Model.Shifts.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-clock-history display-1 text-muted"></i>
                    <p class="text-muted mt-3">لا توجد ورديات حتى الآن</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-lg me-2"></i>
                        إضافة وردية جديدة
                    </a>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-dark table-hover mb-0">
                        <thead>
                            <tr>
                                <th style="width: 50px;">#</th>
                                <th>اسم الوردية</th>
                                <th>وقت البداية</th>
                                <th>وقت الانتهاء</th>
                                <th>ساعات العمل</th>
                                <th>طريقة حساب الراتب</th>
                                <th>مرن</th>
                                <th>سماح الحضور</th>
                                <th>سماح الانصراف</th>
                                <th>معامل الخروج المبكر</th>
                                <th>عدد الموظفين</th>
                                <th style="width: 150px;">الإجراءات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ int counter = 1; }
                            @foreach (var shift in Model.Shifts)
                            {
                                <tr>
                                    @if (Model.EditingShiftId == shift.Id)
                                    {
                                        <!-- Edit Mode -->
                                        <td>@counter</td>
                                        <td colspan="10">
                                            <form asp-action="Edit" asp-route-id="@shift.Id" method="post">
                                                @Html.AntiForgeryToken()
                                                <div class="row g-2 align-items-center">
                                                    <div class="col">
                                                        <label class="form-label small text-muted mb-0">اسم الوردية</label>
                                                        <input asp-for="EditShift!.Shift_name" class="form-control form-control-sm" />
                                                    </div>
                                                    <div class="col">
                                                        <label class="form-label small text-muted mb-0">وقت البداية</label>
                                                        <input asp-for="EditShift!.Start_time" type="time" class="form-control form-control-sm" />
                                                    </div>
                                                    <div class="col">
                                                        <label class="form-label small text-muted mb-0">وقت الانتهاء</label>
                                                        <input asp-for="EditShift!.End_time" type="time" class="form-control form-control-sm" />
                                                    </div>
                                                    <div class="col">
                                                        <label class="form-label small text-muted mb-0">ساعات العمل</label>
                                                        <div class="input-group input-group-sm">
                                                            <input asp-for="EditShift!.StandardHours" type="number" step="0.5" class="form-control" min="0.5" max="24" title="ساعات العمل القياسية المستخدمة لحساب راتب الساعة" />
                                                            <span class="input-group-text">
                                                                <i class="bi bi-info-circle-fill text-warning" title="ساعات العمل هي المستخدمة لحساب راتب الساعة"></i>
                                                            </span>
                                                        </div>
                                                    </div>
                                                    <div class="col">
                                                        <label class="form-label small text-muted mb-0">طريقة حساب الراتب</label>
                                                        <select asp-for="EditShift!.SalaryCalculationType" class="form-select form-select-sm">
                                                            <option value="@SalaryCalculationType.Hourly">بالساعة</option>
                                                            <option value="@SalaryCalculationType.Daily">باليوم</option>
                                                        </select>
                                                    </div>
                                                    <div class="col">
                                                        <label class="form-label small text-muted mb-0">مرن</label>
                                                        <div class="form-check mt-1">
                                                            <input asp-for="EditShift!.IsFlexible" class="form-check-input" />
                                                            <label asp-for="EditShift!.IsFlexible" class="form-check-label">
                                                                <small>نعم</small>
                                                            </label>
                                                        </div>
                                                    </div>
                                                    <div class="col">
                                                        <label class="form-label small text-muted mb-0">سماح الحضور</label>
                                                        <input asp-for="EditShift!.Minutes_allow_attendence" type="number" class="form-control form-control-sm" min="0" max="60" />
                                                    </div>
                                                    <div class="col">
                                                        <label class="form-label small text-muted mb-0">سماح الانصراف</label>
                                                        <input asp-for="EditShift!.Minutes_allow_departure" type="number" class="form-control form-control-sm" min="0" max="60" />
                                                    </div>
                                                    <div class="col">
                                                        <label class="form-label small text-muted mb-0">معامل الخروج المبكر</label>
                                                        <input asp-for="EditShift!.EarlyDepartureMultiplier" type="number" step="0.5" class="form-control form-control-sm" min="0" max="10" />
                                                    </div>
                                                    <div class="col-auto">
                                                        <label class="form-label small text-muted mb-0">&nbsp;</label>
                                                        <div>
                                                            <button type="submit" class="btn btn-success btn-sm">
                                                                <i class="bi bi-check-lg"></i>
                                                            </button>
                                                            <a asp-action="Index" class="btn btn-secondary btn-sm">
                                                                <i class="bi bi-x-lg"></i>
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </form>
                                        </td>
                                        <td></td>
                                    }
                                    else
                                    {
                                        <!-- View Mode -->
                                        <td>@counter</td>
                                        <td>
                                            <i class="bi bi-clock me-2 text-info"></i>
                                            @shift.Shift_name
                                        </td>
                                        <td>
                                            <span class="badge bg-success">
                                                @shift.Start_time.ToString(@"hh\:mm")
                                            </span>
                                        </td>
                                        <td>
                                            <span class="badge bg-danger">
                                                @shift.End_time.ToString(@"hh\:mm")
                                            </span>
                                        </td>
                                        <td>
                                            <span class="badge bg-info">
                                                @shift.StandardHours_Display
                                            </span>
                                        </td>
                                        <td>
                                            <span class="badge @(shift.SalaryCalculationType == SalaryCalculationType.Daily ? "bg-warning text-dark" : "bg-primary")" 
                                                  title="@shift.SalaryCalculationType_Description">
                                                <i class="bi bi-calculator me-1"></i>
                                                @shift.SalaryCalculationType_Display
                                            </span>
                                        </td>
                                        <td>
                                            @if (shift.IsFlexible)
                                            {
                                                <span class="badge bg-success">
                                                    <i class="bi bi-check-circle me-1"></i>
                                                    نعم
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">
                                                    <i class="bi bi-x-circle me-1"></i>
                                                    لا
                                                </span>
                                            }
                                        </td>
                                        <td>
                                            <span class="text-muted">@shift.Minutes_allow_attendence دقيقة</span>
                                        </td>
                                        <td>
                                            <span class="text-muted">@shift.Minutes_allow_departure دقيقة</span>
                                        </td>
                                        <td>
                                            <span class="badge bg-danger">
                                                @shift.EarlyDepartureMultiplier×
                                            </span>
                                        </td>
                                        <td>
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-people me-1"></i>
                                                @shift.EmployeeCount
                                            </span>
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <a asp-action="Index" asp-route-editId="@shift.Id" 
                                                   class="btn btn-outline-warning" title="تعديل">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <button type="button" class="btn btn-outline-danger" 
                                                        title="حذف"
                                                        data-bs-toggle="modal" 
                                                        data-bs-target="#deleteModal-@shift.Id">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </div>

                                            <!-- Delete Confirmation Modal -->
                                            <div class="modal fade" id="deleteModal-@shift.Id" tabindex="-1">
                                                <div class="modal-dialog modal-dialog-centered">
                                                    <div class="modal-content bg-dark">
                                                        <div class="modal-header border-secondary">
                                                            <h5 class="modal-title">
                                                                <i class="bi bi-exclamation-triangle text-warning me-2"></i>
                                                                تأكيد الحذف
                                                            </h5>
                                                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            <p>هل أنت متأكد من حذف وردية <strong>@shift.Shift_name</strong>؟</p>
                                                            @if (shift.EmployeeCount > 0)
                                                            {
                                                                <div class="alert alert-warning">
                                                                    <i class="bi bi-info-circle me-2"></i>
                                                                    هذه الوردية مرتبطة بـ @shift.EmployeeCount موظف
                                                                </div>
                                                            }
                                                        </div>
                                                        <div class="modal-footer border-secondary">
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إلغاء</button>
                                                            <form asp-action="Delete" asp-route-id="@shift.Id" method="post" class="d-inline">
                                                                @Html.AntiForgeryToken()
                                                                <button type="submit" class="btn btn-danger">
                                                                    <i class="bi bi-trash me-2"></i>
                                                                    حذف
                                                                </button>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                    }
                                </tr>
                                counter++;
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
