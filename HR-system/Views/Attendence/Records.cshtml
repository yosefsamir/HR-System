@{
    ViewData["Title"] = "سجلات الحضور";
    ViewData["PageTitle"] = "البحث في سجلات الحضور";
    ViewData["PageIcon"] = "bi-search";
}

<style>
    .autocomplete-container {
        position: relative;
    }
    .autocomplete-results {
        position: absolute;
        top: 100%;
        left: 0;
        right: 0;
        z-index: 1050;
        max-height: 250px;
        overflow-y: auto;
        background: #212529;
        border: 1px solid #495057;
        border-radius: 0.375rem;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.5);
        display: none;
    }
    .autocomplete-results.show {
        display: block;
    }
    .autocomplete-item {
        padding: 0.5rem 1rem;
        cursor: pointer;
        border-bottom: 1px solid #495057;
        transition: background 0.15s;
    }
    .autocomplete-item:last-child {
        border-bottom: none;
    }
    .autocomplete-item:hover,
    .autocomplete-item.active {
        background: #0d6efd;
        color: white;
    }
    .autocomplete-item .employee-code {
        font-size: 0.8rem;
        opacity: 0.7;
    }
    input[type="date"]::-webkit-calendar-picker-indicator {
        filter: invert(1);
        cursor: pointer;
    }
</style>

<div class="container-fluid">
    <!-- Search/Filter Card -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="card-title mb-0">
                <i class="bi bi-funnel me-2"></i>
                البحث والتصفية
            </h5>
        </div>
        <div class="card-body">
            <div class="row g-3 align-items-end">
                <div class="col-md-2">
                    <label class="form-label">من تاريخ</label>
                    <input type="date" id="startDate" class="form-control" />
                </div>
                <div class="col-md-2">
                    <label class="form-label">إلى تاريخ</label>
                    <input type="date" id="endDate" class="form-control" />
                </div>
                <div class="col-md-2">
                    <label class="form-label">القسم</label>
                    <select id="departmentFilter" class="form-select">
                        <option value="">الكل</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">الوردية</label>
                    <select id="shiftFilter" class="form-select">
                        <option value="">الكل</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">الموظف</label>
                    <div class="autocomplete-container">
                        <input type="hidden" id="employeeId" />
                        <input type="text" id="employeeSearch" class="form-control" 
                               placeholder="ابحث بالاسم..." autocomplete="off" />
                        <div id="employeeResults" class="autocomplete-results"></div>
                    </div>
                </div>
                <div class="col-md-1">
                    <button type="button" class="btn btn-primary w-100" id="searchBtn">
                        <i class="bi bi-search"></i>
                    </button>
                </div>
                <div class="col-md-1">
                    <button type="button" class="btn btn-outline-secondary w-100" id="resetBtn" title="إعادة تعيين">
                        <i class="bi bi-x-circle"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Alert Container -->
    <div id="alertContainer"></div>

    <!-- Results Table Card -->
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0">
                <i class="bi bi-table me-2"></i>
                نتائج البحث
            </h5>
            <span class="badge bg-primary" id="recordCount">0 سجل</span>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-dark table-hover mb-0" id="attendanceTable">
                    <thead>
                        <tr>
                            <th style="width: 50px;">#</th>
                            <th>الكود</th>
                            <th>اسم الموظف</th>
                            <th>القسم</th>
                            <th>الوردية</th>
                            <th>التاريخ</th>
                            <th>الحضور</th>
                            <th>الانصراف</th>
                            <th>ساعات العمل</th>
                            <th>التأخير</th>
                            <th>الإضافي</th>
                            <th>الحالة</th>
                            <th style="width: 120px;">الإجراءات</th>
                        </tr>
                    </thead>
                    <tbody id="attendanceTableBody">
                    </tbody>
                </table>
            </div>
            <div id="noRecordsMessage" class="text-center py-5">
                <i class="bi bi-search display-1 text-muted"></i>
                <p class="text-muted mt-3">اختر معايير البحث واضغط بحث لعرض النتائج</p>
            </div>
            <div id="loadingMessage" class="text-center py-5 d-none">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">جاري التحميل...</span>
                </div>
                <p class="text-muted mt-3">جاري البحث...</p>
            </div>
        </div>
    </div>
</div>

<!-- Edit Modal -->
<div class="modal fade" id="editModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content bg-dark">
            <div class="modal-header border-secondary">
                <h5 class="modal-title">
                    <i class="bi bi-pencil me-2"></i>
                    تعديل سجل الحضور
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="editId" />
                <div class="mb-3">
                    <label class="form-label">الموظف</label>
                    <input type="text" id="editEmployeeName" class="form-control" readonly />
                </div>
                <div class="mb-3">
                    <label class="form-label">التاريخ</label>
                    <input type="text" id="editWorkDate" class="form-control" readonly />
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">وقت الحضور</label>
                        <input type="time" id="editCheckInTime" class="form-control" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">وقت الانصراف</label>
                        <input type="time" id="editCheckOutTime" class="form-control" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">إذن (دقائق)</label>
                        <input type="number" id="editPermissionMinutes" class="form-control" min="0" max="480" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-check mt-4">
                            <input type="checkbox" id="editIsAbsent" class="form-check-input" />
                            <label class="form-check-label" for="editIsAbsent">غائب</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer border-secondary">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إلغاء</button>
                <button type="button" class="btn btn-primary" id="saveEditBtn">
                    <i class="bi bi-check-lg me-1"></i>
                    حفظ التغييرات
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content bg-dark">
            <div class="modal-header border-secondary">
                <h5 class="modal-title">
                    <i class="bi bi-exclamation-triangle text-warning me-2"></i>
                    تأكيد الحذف
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="deleteId" />
                <p>هل أنت متأكد من حذف سجل الحضور لـ <strong id="deleteEmployeeName"></strong>؟</p>
                <div class="alert alert-warning">
                    <i class="bi bi-info-circle me-2"></i>
                    سيتم حذف سجلات التأخير والإضافي المرتبطة
                </div>
            </div>
            <div class="modal-footer border-secondary">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إلغاء</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">
                    <i class="bi bi-trash me-1"></i>
                    حذف
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    const baseUrl = '/Attendence';
    let editModal, deleteModal;
    let allEmployees = [];
    let currentRecords = [];

    document.addEventListener('DOMContentLoaded', async function() {
        editModal = new bootstrap.Modal(document.getElementById('editModal'));
        deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));

        // Initialize dates with today
        const today = new Date().toISOString().split('T')[0];
        document.getElementById('startDate').value = today;
        document.getElementById('endDate').value = today;

        // Load dropdowns
        await Promise.all([
            loadEmployees(),
            loadDepartments(),
            loadShifts()
        ]);

        // Search button
        document.getElementById('searchBtn').addEventListener('click', performSearch);
        
        // Reset button
        document.getElementById('resetBtn').addEventListener('click', resetSearch);
        
        // Edit save button
        document.getElementById('saveEditBtn').addEventListener('click', saveEdit);
        
        // Delete confirm button
        document.getElementById('confirmDeleteBtn').addEventListener('click', confirmDelete);

        // Edit absent checkbox
        document.getElementById('editIsAbsent').addEventListener('change', function() {
            toggleEditTimeInputs(this.checked);
        });

        // Employee autocomplete
        setupAutocomplete('employeeSearch', 'employeeResults', 'employeeId');

        // Close autocomplete when clicking outside
        document.addEventListener('click', function(e) {
            if (!e.target.closest('.autocomplete-container')) {
                document.querySelectorAll('.autocomplete-results').forEach(r => r.classList.remove('show'));
            }
        });
        
        // Enter key to search
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Enter' && !e.target.closest('.modal')) {
                performSearch();
            }
        });
    });

    async function loadEmployees() {
        try {
            const response = await fetch(`${baseUrl}/GetEmployees`);
            const result = await response.json();
            if (result.success) {
                allEmployees = result.data;
            }
        } catch (error) {
            console.error('Error loading employees:', error);
        }
    }

    async function loadDepartments() {
        try {
            const response = await fetch(`${baseUrl}/GetDepartments`);
            const result = await response.json();
            if (result.success) {
                const select = document.getElementById('departmentFilter');
                result.data.forEach(dept => {
                    const option = document.createElement('option');
                    option.value = dept.id;
                    option.textContent = dept.name;
                    select.appendChild(option);
                });
            }
        } catch (error) {
            console.error('Error loading departments:', error);
        }
    }

    async function loadShifts() {
        try {
            const response = await fetch(`${baseUrl}/GetShifts`);
            const result = await response.json();
            if (result.success) {
                const select = document.getElementById('shiftFilter');
                result.data.forEach(shift => {
                    const option = document.createElement('option');
                    option.value = shift.id;
                    option.textContent = `${shift.name} (${shift.start} - ${shift.end})`;
                    select.appendChild(option);
                });
            }
        } catch (error) {
            console.error('Error loading shifts:', error);
        }
    }

    function setupAutocomplete(inputId, resultsId, hiddenId) {
        const input = document.getElementById(inputId);
        const results = document.getElementById(resultsId);
        const hidden = document.getElementById(hiddenId);
        let activeIndex = -1;

        input.addEventListener('input', function() {
            const query = this.value.toLowerCase().trim();
            activeIndex = -1;
            hidden.value = '';
            
            if (query.length < 1) {
                results.classList.remove('show');
                return;
            }

            const filtered = allEmployees.filter(emp => 
                emp.name.toLowerCase().includes(query) || 
                emp.code.toLowerCase().includes(query)
            );

            if (filtered.length === 0) {
                results.innerHTML = '<div class="autocomplete-item text-muted">لا توجد نتائج</div>';
            } else {
                results.innerHTML = filtered.map((emp, idx) => `
                    <div class="autocomplete-item" data-id="${emp.id}" data-name="${emp.name}" data-code="${emp.code}">
                        <div><strong>${emp.name}</strong></div>
                        <div class="employee-code">${emp.code}</div>
                    </div>
                `).join('');
            }
            
            results.classList.add('show');

            results.querySelectorAll('.autocomplete-item[data-id]').forEach(item => {
                item.addEventListener('click', function() {
                    hidden.value = this.dataset.id;
                    input.value = `${this.dataset.code} - ${this.dataset.name}`;
                    results.classList.remove('show');
                });
            });
        });

        input.addEventListener('keydown', function(e) {
            const items = results.querySelectorAll('.autocomplete-item[data-id]');
            if (e.key === 'ArrowDown') {
                e.preventDefault();
                activeIndex = Math.min(activeIndex + 1, items.length - 1);
                items.forEach((item, idx) => item.classList.toggle('active', idx === activeIndex));
            } else if (e.key === 'ArrowUp') {
                e.preventDefault();
                activeIndex = Math.max(activeIndex - 1, 0);
                items.forEach((item, idx) => item.classList.toggle('active', idx === activeIndex));
            } else if (e.key === 'Enter' && activeIndex >= 0 && items[activeIndex]) {
                e.preventDefault();
                items[activeIndex].click();
            } else if (e.key === 'Escape') {
                results.classList.remove('show');
            }
        });
    }

    async function performSearch() {
        const startDate = document.getElementById('startDate').value;
        const endDate = document.getElementById('endDate').value;
        const departmentId = document.getElementById('departmentFilter').value;
        const shiftId = document.getElementById('shiftFilter').value;
        const employeeId = document.getElementById('employeeId').value;
        
        // Validate dates
        if (!startDate || !endDate) {
            showAlert('الرجاء تحديد التاريخ', 'danger');
            return;
        }

        // Build URL params
        let params = new URLSearchParams();
        params.append('startDate', startDate);
        params.append('endDate', endDate);
        
        if (departmentId) {
            params.append('departmentId', departmentId);
        }
        if (shiftId) {
            params.append('shiftId', shiftId);
        }
        if (employeeId) {
            params.append('employeeId', employeeId);
        }

        // Show loading
        document.getElementById('noRecordsMessage').classList.add('d-none');
        document.getElementById('loadingMessage').classList.remove('d-none');
        document.getElementById('attendanceTableBody').innerHTML = '';

        try {
            const response = await fetch(`${baseUrl}/GetAll?${params.toString()}`);
            const result = await response.json();
            
            document.getElementById('loadingMessage').classList.add('d-none');
            
            if (result.success) {
                currentRecords = result.data;
                renderTable();
            } else {
                showAlert(result.message, 'danger');
            }
        } catch (error) {
            document.getElementById('loadingMessage').classList.add('d-none');
            showAlert('حدث خطأ في البحث', 'danger');
            console.error(error);
        }
    }

    function renderTable() {
        const tbody = document.getElementById('attendanceTableBody');
        const noRecords = document.getElementById('noRecordsMessage');
        const recordCount = document.getElementById('recordCount');

        if (currentRecords.length === 0) {
            tbody.innerHTML = '';
            noRecords.innerHTML = `
                <i class="bi bi-inbox display-1 text-muted"></i>
                <p class="text-muted mt-3">لا توجد نتائج للبحث</p>
            `;
            noRecords.classList.remove('d-none');
            recordCount.textContent = '0 سجل';
            return;
        }

        noRecords.classList.add('d-none');
        recordCount.textContent = `${currentRecords.length} سجل`;

        tbody.innerHTML = currentRecords.map((item, index) => `
            <tr data-id="${item.id}">
                <td>${index + 1}</td>
                <td><span class="badge bg-dark border">${item.employee_code}</span></td>
                <td>${item.employee_name}</td>
                <td><span class="badge bg-info">${item.department_name || '-'}</span></td>
                <td><span class="badge bg-secondary">${item.shift_name || '-'}</span></td>
                <td>${item.work_date_Display}</td>
                <td>${item.check_In_Display}</td>
                <td>${item.check_Out_Display}</td>
                <td>${item.worked_hours_Display}</td>
                <td>${item.lateTime_minutes && item.lateTime_minutes > 0 ? `<span class="text-warning">${item.lateTime_Display}</span>` : '-'}</td>
                <td>${item.overTime_minutes && item.overTime_minutes > 0 ? `<span class="text-success">${item.overTime_Display}</span>` : '-'}</td>
                <td>${getStatusBadge(item)}</td>
                <td>
                    <div class="btn-group btn-group-sm">
                        <button type="button" class="btn btn-outline-warning" onclick="openEditModal(${item.id})" title="تعديل">
                            <i class="bi bi-pencil"></i>
                        </button>
                        <button type="button" class="btn btn-outline-danger" onclick="openDeleteModal(${item.id}, '${item.employee_name}')" title="حذف">
                            <i class="bi bi-trash"></i>
                        </button>
                    </div>
                </td>
            </tr>
        `).join('');
    }

    function getStatusBadge(item) {
        if (item.is_Absent) return '<span class="badge bg-danger">غائب</span>';
        if (item.check_out_time) return '<span class="badge bg-success">مكتمل</span>';
        if (item.check_In_time) return '<span class="badge bg-info">حاضر</span>';
        return '<span class="badge bg-secondary">لم يبدأ</span>';
    }

    async function openEditModal(id) {
        try {
            const response = await fetch(`${baseUrl}/GetById?id=${id}`);
            const result = await response.json();

            if (result.success) {
                const data = result.data;
                document.getElementById('editId').value = data.id;
                document.getElementById('editEmployeeName').value = `${data.employee_code} - ${data.employee_name}`;
                document.getElementById('editWorkDate').value = data.work_date_Display;
                document.getElementById('editCheckInTime').value = data.check_In_time ? data.check_In_time.substring(0, 5) : '';
                document.getElementById('editCheckOutTime').value = data.check_out_time ? data.check_out_time.substring(0, 5) : '';
                document.getElementById('editPermissionMinutes').value = data.permission_time || 0;
                document.getElementById('editIsAbsent').checked = data.is_Absent;
                toggleEditTimeInputs(data.is_Absent);
                editModal.show();
            } else {
                showAlert(result.message, 'danger');
            }
        } catch (error) {
            showAlert('حدث خطأ في تحميل البيانات', 'danger');
        }
    }

    function toggleEditTimeInputs(isAbsent) {
        document.getElementById('editCheckInTime').disabled = isAbsent;
        document.getElementById('editCheckOutTime').disabled = isAbsent;
        if (isAbsent) {
            document.getElementById('editCheckInTime').value = '';
            document.getElementById('editCheckOutTime').value = '';
        }
    }

    async function saveEdit() {
        const id = parseInt(document.getElementById('editId').value);
        const saveBtn = document.getElementById('saveEditBtn');
        
        saveBtn.disabled = true;
        saveBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-1"></span>جاري الحفظ...';

        const data = {
            Is_absent: document.getElementById('editIsAbsent').checked,
            Check_In_time: document.getElementById('editCheckInTime').value || null,
            Check_out_time: document.getElementById('editCheckOutTime').value || null,
            Permission_minutes: parseInt(document.getElementById('editPermissionMinutes').value) || 0
        };

        try {
            const response = await fetch(`${baseUrl}/UpdateAjax?id=${id}`, {
                method: 'PUT',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data)
            });

            const result = await response.json();
            
            if (result.success) {
                editModal.hide();
                showAlert(result.message, 'success');
                // Update record in array
                const index = currentRecords.findIndex(r => r.id === id);
                if (index !== -1 && result.data) {
                    currentRecords[index] = result.data;
                    renderTable();
                }
            } else {
                showAlert(result.message, 'danger');
            }
        } catch (error) {
            showAlert('حدث خطأ في حفظ البيانات', 'danger');
        } finally {
            saveBtn.disabled = false;
            saveBtn.innerHTML = '<i class="bi bi-check-lg me-1"></i>حفظ التغييرات';
        }
    }

    function openDeleteModal(id, employeeName) {
        document.getElementById('deleteId').value = id;
        document.getElementById('deleteEmployeeName').textContent = employeeName;
        deleteModal.show();
    }

    async function confirmDelete() {
        const id = parseInt(document.getElementById('deleteId').value);
        const deleteBtn = document.getElementById('confirmDeleteBtn');
        
        deleteBtn.disabled = true;
        deleteBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-1"></span>جاري الحذف...';

        try {
            const response = await fetch(`${baseUrl}/DeleteAjax?id=${id}`, {
                method: 'DELETE'
            });

            const result = await response.json();
            
            if (result.success) {
                deleteModal.hide();
                showAlert(result.message, 'success');
                // Remove from array
                currentRecords = currentRecords.filter(r => r.id !== id);
                renderTable();
            } else {
                showAlert(result.message, 'danger');
            }
        } catch (error) {
            showAlert('حدث خطأ في حذف السجل', 'danger');
        } finally {
            deleteBtn.disabled = false;
            deleteBtn.innerHTML = '<i class="bi bi-trash me-1"></i>حذف';
        }
    }

    function resetSearch() {
        const today = new Date().toISOString().split('T')[0];
        document.getElementById('startDate').value = today;
        document.getElementById('endDate').value = today;
        document.getElementById('departmentFilter').value = '';
        document.getElementById('shiftFilter').value = '';
        document.getElementById('employeeId').value = '';
        document.getElementById('employeeSearch').value = '';
        
        currentRecords = [];
        document.getElementById('attendanceTableBody').innerHTML = '';
        document.getElementById('recordCount').textContent = '0 سجل';
        document.getElementById('noRecordsMessage').innerHTML = `
            <i class="bi bi-search display-1 text-muted"></i>
            <p class="text-muted mt-3">اختر معايير البحث واضغط بحث لعرض النتائج</p>
        `;
        document.getElementById('noRecordsMessage').classList.remove('d-none');
    }

    function showAlert(message, type) {
        const container = document.getElementById('alertContainer');
        const alertId = 'alert-' + Date.now();
        
        container.innerHTML = `
            <div id="${alertId}" class="alert alert-${type} alert-dismissible fade show" role="alert">
                <i class="bi bi-${type === 'success' ? 'check-circle' : 'exclamation-circle'} me-2"></i>
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        `;

        setTimeout(() => {
            const alert = document.getElementById(alertId);
            if (alert) alert.remove();
        }, 5000);
    }
</script>
}
