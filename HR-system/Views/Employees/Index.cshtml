@using HR_system.DTOs.Employee
@model HR_system.ViewModels.EmployeesIndexViewModel

@{
    ViewData["Title"] = "الموظفين";
    ViewData["PageTitle"] = "قائمة الموظفين";
    ViewData["PageIcon"] = "bi-people";
}

<div class="container-fluid">
    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card bg-primary text-white">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-2 opacity-75">إجمالي الموظفين</h6>
                        <h2 class="card-title mb-0">@Model.TotalCount</h2>
                    </div>
                    <i class="bi bi-people display-4 opacity-50"></i>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-success text-white">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-2 opacity-75">موظفين نشطين</h6>
                        <h2 class="card-title mb-0">@Model.ActiveCount</h2>
                    </div>
                    <i class="bi bi-person-check display-4 opacity-50"></i>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-secondary text-white">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-2 opacity-75">موظفين غير نشطين</h6>
                        <h2 class="card-title mb-0">@Model.InactiveCount</h2>
                    </div>
                    <i class="bi bi-person-x display-4 opacity-50"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters Card -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="card-title mb-0">
                <i class="bi bi-funnel me-2"></i>
                البحث والتصفية
            </h5>
        </div>
        <div class="card-body">
            <form asp-action="Index" method="get">
                <div class="row g-3 align-items-end">
                    <div class="col-md-3">
                        <label class="form-label">البحث</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-search"></i></span>
                            <input type="text" name="search" class="form-control" 
                                   placeholder="اسم الموظف أو الكود..." value="@Model.SearchTerm" />
                        </div>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">القسم</label>
                        <select name="departmentId" class="form-select" asp-items="Model.Departments">
                            <option value="">-- الكل --</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">الوردية</label>
                        <select name="shiftId" class="form-select" asp-items="Model.Shifts">
                            <option value="">-- الكل --</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">الحالة</label>
                        <select name="status" class="form-select" asp-items="Model.Statuses">
                            <option value="">-- الكل --</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-search me-2"></i>
                            بحث
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle me-2"></i>
                            إعادة تعيين
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Employees Table Card -->
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0">
                <i class="bi bi-list-ul me-2"></i>
                قائمة الموظفين
            </h5>
            <a asp-action="Create" class="btn btn-primary btn-sm">
                <i class="bi bi-plus-lg me-2"></i>
                إضافة موظف جديد
            </a>
        </div>
        <div class="card-body p-0">
            @if (!Model.Employees.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-people display-1 text-muted"></i>
                    <p class="text-muted mt-3">لا يوجد موظفين</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-lg me-2"></i>
                        إضافة أول موظف
                    </a>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-dark table-hover mb-0">
                        <thead>
                            <tr>
                                <th style="width: 50px;">#</th>
                                <th>الكود</th>
                                <th>الاسم</th>
                                <th>القسم</th>
                                <th>الوردية</th>
                                <th>الراتب</th>
                                <th>الحالة</th>
                                <th style="width: 150px;">الإجراءات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ int counter = 1; }
                            @foreach (var emp in Model.Employees)
                            {
                                <tr>
                                    <td>@counter</td>
                                    <td>
                                        <span class="badge bg-dark border">@emp.Code</span>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar bg-primary rounded-circle p-2 me-2" style="width: 35px; height: 35px;">
                                                <i class="bi bi-person text-white"></i>
                                            </div>
                                            <div>
                                                <span class="d-block">@emp.Emp_name</span>
                                                <small class="text-muted">@emp.Gender</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(emp.Department_name))
                                        {
                                            <span class="badge bg-info">@emp.Department_name</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(emp.Shift_name))
                                        {
                                            <span class="badge bg-secondary">@emp.Shift_name</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="text-success fw-bold">@emp.Salary.ToString("N2")</span>
                                    </td>
                                    <td>
                                        @{
                                            var statusClass = emp.Status switch
                                            {
                                                "Active" => "bg-success",
                                                "Inactive" => "bg-secondary",
                                                "On Leave" => "bg-warning text-dark",
                                                "Terminated" => "bg-danger",
                                                _ => "bg-secondary"
                                            };
                                            var statusText = emp.Status switch
                                            {
                                                "Active" => "نشط",
                                                "Inactive" => "غير نشط",
                                                "On Leave" => "إجازة",
                                                "Terminated" => "منتهي",
                                                _ => emp.Status
                                            };
                                        }
                                        <span class="badge @statusClass">@statusText</span>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Edit" asp-route-id="@emp.Id" 
                                               class="btn btn-outline-warning" title="تعديل">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <button type="button" class="btn btn-outline-danger" 
                                                    title="حذف"
                                                    data-bs-toggle="modal" 
                                                    data-bs-target="#deleteModal-@emp.Id">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>

                                        <!-- Delete Confirmation Modal -->
                                        <div class="modal fade" id="deleteModal-@emp.Id" tabindex="-1">
                                            <div class="modal-dialog modal-dialog-centered">
                                                <div class="modal-content bg-dark">
                                                    <div class="modal-header border-secondary">
                                                        <h5 class="modal-title">
                                                            <i class="bi bi-exclamation-triangle text-warning me-2"></i>
                                                            تأكيد الحذف
                                                        </h5>
                                                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <p>هل أنت متأكد من حذف الموظف <strong>@emp.Emp_name</strong>؟</p>
                                                        <div class="alert alert-danger">
                                                            <i class="bi bi-exclamation-circle me-2"></i>
                                                            سيتم حذف جميع البيانات المرتبطة بهذا الموظف
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer border-secondary">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إلغاء</button>
                                                        <form asp-action="Delete" asp-route-id="@emp.Id" method="post" class="d-inline">
                                                            @Html.AntiForgeryToken()
                                                            <button type="submit" class="btn btn-danger">
                                                                <i class="bi bi-trash me-2"></i>
                                                                حذف
                                                            </button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                                counter++;
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
